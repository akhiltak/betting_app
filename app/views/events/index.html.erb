<h1>Listing events</h1>

<table cellpadding="10px" cellspacing="0px" border="1px">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Category</th>
      <th>Open till</th>
      <th>Total bets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.name %></td>
        <td><%= event.desc %></td>
        <td><%= event.category %></td>
        <td><%= event.open_till %></td>
        <td><%= event.total_bets %></td>
        <td><%= link_to 'Outcomes', event_outcomes_path(event) %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

